generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  DEMO
}

model User {
  id           String @id @default(cuid())
  email        String @unique
  name         String
  passwordHash String
  role         Role   @default(USER)

  tasks Task[]
}

model Task {
  id          String  @id @default(cuid())
  name        String
  description String
  isCompleted Boolean

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  tags Tag[]

  @@index([userId])
}

model Tag {
  id   String @id @default(cuid())
  name String @unique

  tasks Task[]
}
