generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  email        String @unique
  name         String
  passwordHash String

  tasks Task[]
}

model Task{
  id String @id @default(cuid())
  description String
  isCompleted Boolean

  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}